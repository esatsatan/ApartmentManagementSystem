<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="310dp">


    <ImageView
        android:id="@+id/adminSelectedImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/AdmiMessageSenderEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="esatsatan91@gmail.com"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/AdminMessageTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="10 mart 2022 15.30"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/adminChatMessageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Giriş tarafındaki ışıkların bir tanesi bozulmuş."/>

</LinearLayout>



