<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homefragmentviews.AddBrokenFragment">

    <ImageView
        android:id="@+id/setImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="5dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:background="@drawable/foto_sec"/>

    <TextView
        android:id="@+id/CreateMessageSenderEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="esatsatan91@gmail.com"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/CreateChatMessageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Arızayı Bildiriniz .."/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Save_Broken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Paylaş"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:background="@android:color/darker_gray"/>





</LinearLayout>