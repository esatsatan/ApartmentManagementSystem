<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.satan.estyonetim.homefragmentviews.HomeFragment"
        android:label="Anasayfa"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/ChatFragment" />
        <action
            android:id="@+id/action_homeFragment_to_paymentFragment2"
            app:destination="@id/paymenttFragment" />
        <action
            android:id="@+id/action_homeFragment_to_fitnessFragment"
            app:destination="@id/fitnessFragment" />
    </fragment>
    <fragment
        android:id="@+id/ChatFragment"
        android:name="com.satan.estyonetim.homefragmentviews.DamageNotificateFragment"
        android:label="Arıza Bildir"
        tools:layout="@layout/fragment_damage_notificate" >
        <action
            android:id="@+id/action_settingsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_ChatFragment_to_addBrokenFragment"
            app:destination="@id/addBrokenFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymenttFragment"
        android:name="com.satan.estyonetim.homefragmentviews.PaymentDetailFragment"
        android:label="Ödeme"
        tools:layout="@layout/fragment_payment_detail" >
        <action
            android:id="@+id/action_paymentFragment2_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBrokenFragment"
        android:name="com.satan.estyonetim.homefragmentviews.AddBrokenFragment"
        android:label="fragment_add_broken"
        tools:layout="@layout/fragment_add_broken" >
        <action
            android:id="@+id/action_addBrokenFragment_to_ChatFragment"
            app:destination="@id/ChatFragment" />
    </fragment>
    <fragment
        android:id="@+id/fitnessFragment"
        android:name="com.satan.estyonetim.homefragmentviews.FitnessFragment"
        android:label="Fitness Randevusu"
        tools:layout="@layout/fragment_fitness" >
        <action
            android:id="@+id/action_fitnessFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>